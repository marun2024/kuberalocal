# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost/kubera
DATABASE_ECHO=false

# JWT Authentication - REQUIRED
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=

# App Configuration
APP_DOMAIN=localhost
API_DOMAIN=localhost
WEBSITE_DOMAIN=http://localhost:5173

# Environment (development, production, staging)
ENVIRONMENT=development

# CORS Origins for development (JSON array format)
# Frontend dev server origins - not needed in production
ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Frontend static files path (only used when ENVIRONMENT != "development")
# FRONTEND_DIST_PATH=/app/frontend/dist