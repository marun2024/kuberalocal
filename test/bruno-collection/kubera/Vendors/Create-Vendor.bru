}

tests {
  test("Create vendor successful", function() {
    expect(res.getStatus()).to.equal(200);
    expect(res.getBody()).to.have.property('id');
    expect(res.getBody().name).to.equal('Test Vendor');
  });
  
  // Store vendor ID for other requests
  if (res.getStatus() === 200) {
    bru.setVar("vendorId", res.getBody().id);
  }
}